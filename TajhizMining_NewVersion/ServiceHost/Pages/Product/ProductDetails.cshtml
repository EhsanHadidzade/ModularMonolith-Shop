                    <div class="product_info_button">
                        <ul class="nav" role="tablist">
                            <li>
                                <a class="active" data-toggle="tab" href="#info" role="tab" aria-controls="info" aria-selected="false">توضیحات</a>
                                <script>debugger;</script>
                            </li>
                        </ul>
                    </div>
                    <div class="tab-content">
                        <div class="tab-pane fade show active" id="info" role="tabpanel">
                            <div class="product_info_content">
                                <p>@Model.Product.Description</p>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>
<!--product info end-->
<!--Comment Section start-->
<div class="product_d_info mb-60">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="product_d_inner">
                    <div class="product_info_button">
                        <ul class="nav" role="tablist">
                            <li>
                                <a data-toggle="tab" href="#reviews" role="tab" aria-controls="reviews" aria-selected="false">نقد و برررسی</a>
                            </li>
                        </ul>
                    </div>
                    @if (Model.Product.Comments != null)
                    {
                        <div>
                            <div class="tab-pane " id="reviews" role="tabpanel">
                                <div class="reviews_wrapper">
                                    <h2>@Model.Product.Comments.Count() نقد و بررسی برای این محصول</h2>
                                    @foreach (var comment in Model.Product.Comments)
                                    {
                                        <div class="reviews_comment_box">
                                            <div class="comment_thmb">
                                                <img src="/theme/assets/img/blog/comment2.jpg" alt="">
                                            </div>
                                            <div class="comment_text">

                                                <div class="reviews_meta">
                                                    <p><strong>@comment.Name </strong>@comment.CreationDate</p>
                                                </div>
                                                <p>@comment.Message</p>


                                            </div>
                                        </div>
                                    }
                                    <div class="comment_title">
                                        <h2>یک نقد و بررسی بنویسید </h2>
                                        <p>ایمیل شما منتشر نخواهد شد. فیلد های الزامی مشخص شده اند </p>
                                    </div>
                                    <div class="product_review_form">
                                        <form method="post">
                                            <div class="row">
                                                <div class="col-12">
                                                    <label for="review_comment">نقد و بررسی شما </label>
                                                    <textarea id="review_comment" asp-for="command.Message"></textarea>
                                                </div>
                                                <div class="col-lg-6 col-md-6">
                                                    <label for="author">نام</label>
                                                    <input id="author" type="text" asp-for="command.Name">


                                                </div>
                                                <div class="col-lg-6 col-md-6">
                                                    <label for="email">ایمیل </label>
                                                    <input id="email" type="email" dir="ltr" asp-for="command.Email">
                                                </div>
                                            </div>
                                            <button type="submit" onclick="alert()">ثبت</button>
                                            <input type="hidden" asp-for="command.OwnerRecordId" value="@Model.Product.Id" />
                                            <input type="hidden" name="ProductSlug" value="@Model.Product.Slug" />

                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
<!--Comment Section end-->
<!--product area start-->
<section class="product_area related_products">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="section_title">
                    <h2>محصولات مرتبط	</h2>
                </div>
            </div>
        </div>
        <div class="product_carousel product_column5 owl-carousel">
            @if (Model.RelatedProducts.Count==0)
            {
                <p>محصولی یافت نشد</p>
            }
            else
            {
                @foreach (var item in Model.RelatedProducts)
                {
                    <article class="single_product">
                        <figure>
                            <div class="product_thumb">
                                <a class="primary_img" asp-page="/product/productdetails" asp-route-id="@item.Slug"><img src="/UploadedFiles/@item.Picture" alt="@item.PictureAlt" title="@item.PictureTitle"></a>
                                <a class="secondary_img" asp-page="/product/productdetails" asp-route-id="@item.Slug"><img src="/UploadedFiles/@item.Picture" alt="@item.PictureAlt" title="@item.PictureTitle"></a>
                                <div class="label_product">
                                    <span class="label_sale">فروش</span>
                                </div>
                                <div class="action_links">
                                    <ul>
                                        <li class="wishlist"><a href="wishlist.html" title="افزودن به علاقه‌مندی‌ها"><i class="fa fa-heart-o" aria-hidden="true"></i></a></li>
                                        <li class="compare"><a href="#" title="مقایسه"><span class="ion-levels"></span></a></li>
                                        <li class="quick_button">
                                            <a href="#" data-toggle="modal" data-target="#modal_box" title="مشاهده سریع"> <span class="ion-ios-search-strong"></span></a>
                                        </li>
                                    </ul>
                                </div>
                                <div class="add_to_cart">
                                    <a href="cart.html" title="افزودن به سبد">افزودن به سبد</a>
                                </div>
                            </div>
                            <figcaption class="product_content">
                                <div class="price_box">
                                    @if (item.HasDiscount)
                                    {
                                        <span class="old_price">@item.OldPrice تومان</span>
                                        <span class="current_price">@item.Price تومان</span>
                                    }
                                    else
                                    {
                                        <span class="current_price">@item.Price تومان</span>
                                    }
                                </div>
                                <h3 class="product_name"><a href="product-details.html">@item.Name</a></h3>
                            </figcaption>
                        </figure>
                    </article>
                }
            }
        </div>
    </div>
</section>
<!--product area end-->
