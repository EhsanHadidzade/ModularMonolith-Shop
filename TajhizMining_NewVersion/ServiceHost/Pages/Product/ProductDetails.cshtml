    </div>
</div>
<!--breadcrumbs area end-->
<!--product details start-->
<div class="product_details mt-60 mb-60">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 col-md-6">
                <div class="product-details-tab">
                    <div id="img-1" class="zoomWrapper single-zoom">
                        <a href="#">
                            <img id="zoom1" src="/UploadedFiles/@Model.Product.Picture" data-zoom-image="/UploadedFiles/@Model.Product.Picture" alt="big-1">
                        </a>
                    </div>
                    @if (Model.Product.ProductPictures != null)
                    {
                        <div class="single-zoom-thumb">
                            <ul class="s-tab-zoom owl-carousel single-product-active" id="gallery_01">

                                @foreach (var item in Model.Product.ProductPictures)
                                {
                                    <li>
                                        <a href="#" class="elevatezoom-gallery active" data-update="" data-image="/UploadedFiles/@item.Picture" data-zoom-image="/UploadedFiles/@item.Picture">
                                            <img src="/UploadedFiles/@item.Picture" alt="zo-th-1">
                                        </a>

                                    </li>
                                }

                            </ul>
                        </div>
                    }
                </div>
            </div>
            <div class="col-lg-6 col-md-6">
                <div class="product_d_right">
                    <form action="#">

                        <h1>@Model.Product.Name</h1>

                        <div class=" product_ratting">
                            <ul>
                                <li><span><i class="fa fa-star"></i></span></li>
                                <li><span><i class="fa fa-star"></i></span></li>
                                <li><span><i class="fa fa-star"></i></span></li>
                                <li><span><i class="fa fa-star"></i></span></li>
                                <li><span><i class="fa fa-star"></i></span></li>
                                <li class="review"><a href="#"> (امتیاز مشتریان) </a></li>
                            </ul>

                        </div>
                        <div class="price_box">
                            @if (Model.Product.HasDiscount)
                            {
                                <span class="old_price">@Model.Product.OldPrice تومان</span>
                                <span class="current_price">@Model.Product.Price تومان</span>
                            }
                            else
                            {
                                <span class="current_price">@Model.Product.Price تومان</span>
                            }

                        </div>
                        <div class="product_desc">
                            <p>@Model.Product.ShortDescription</p>
                        </div>
                        @if (Model.Product.HasDiscount)
                        {
                            <div class="product_timing">
                                <div data-countdown="@Model.Product.DiscountExpireDate"></div>
                            </div>

                        }

                        <div class="product_variant quantity">
                            <label>تعداد</label>
                            <input min="1" max="100" value="1" type="number">
                            <button class="button" type="submit">افزودن به سبد</button>

                        </div>
                        <div class=" product_d_action">
                            <ul>
                                <li><a href="#" title="افزودن به علاقه‌مندی‌ها">+ افزودن به علاقه‌مندی‌ها</a></li>
                                <li><a href="#" title="مقایسه">+ مقایسه</a></li>
                            </ul>
                        </div>
                        <div class="product_meta">
                            <span>دسته: <a asp-page="/product/index" asp-route-id="@Model.Product.CategorySlug">@Model.Product.Category</a></span>
                        </div>

                    </form>
                    <div class="priduct_social">
                        <ul>
                            <li><a class="facebook" href="#" title="فیسبوک"><i class="fa fa-facebook"></i> لایک</a></li>
                            <li><a class="twitter" href="#" title="توییتر"><i class="fa fa-twitter"></i> توییت</a></li>
                            <li><a class="pinterest" href="#" title="پینترست"><i class="fa fa-pinterest"></i> ذخیره</a></li>
                            <li><a class="google-plus" href="#" title="گوگل پلاس"><i class="fa fa-google-plus"></i> اشتراک گذاری</a></li>
                            <li><a class="telegram" href="#" title="تلگرام"><i class="fa fa-telegram"></i> تلگرام</a></li>
                        </ul>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>
<!--product details end-->
<!--product info start-->
<div class="product_d_info mb-60">
    <div class="container">
        <div class="row">
